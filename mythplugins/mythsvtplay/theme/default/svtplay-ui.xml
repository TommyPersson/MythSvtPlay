<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

  <window name="hello">

    <textarea name="title" from="basetextarea">
      <area>0,0,780,40</area>
      <value>Hello MythTV!</value>
      <align>hcenter,vcenter</align>
      <font>baselarge</font>
    </textarea>

  </window>

  <window name="main">

    <textarea name="title" from="basetextarea">
      <area>0,100,100%,60</area>
      <align>hcenter,vcenter</align>
      <font>basetitle</font>
      <value>SVT Play</value>
    </textarea>

    <buttontree name="program-tree">
      <area>5%,200,90%,340</area>
      <numlists>3</numlists>
      <spacing>6</spacing>
      <buttonlist name="listtemplate" from="basebuttonlist" />
    </buttontree>

  </window>

  <window name="program-view">

    <textarea name="title" from="basetextarea">
      <area>30,30,200,200</area>
      <value>Hello MythTV!</value>
      <font>baselarge</font>
    </textarea>

  

    <!-- Top menu -->

    <button name="home-button" from="basebutton">
      <position>100,100</position>
    </button>

    <button name="back-button" from="basebutton">
      <position>300,100</position>
    </button>

    <button name="current-button" from="basebutton">
      <position>500,100</position>
    </button>

    <buttonlist name="root-list" from="basebuttonlist">
      <area>100,200,200,200</area>
    </buttonlist>

    <buttonlist name="selectors-list" from="basebuttonlist">
      <area>300,200,200,200</area>
    </buttonlist>

    <buttonlist name="choice-list" from="basebuttonlist">
      <area>500,200,200,200</area>
    </buttonlist>

    <!-- Program/Clip sidebar -->

    <!-- Program imagebox -->

    <!-- Program infobox -->

  </window>

</mythuitheme>

