<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>

  <window name="hello">

    <textarea name="title" from="basetextarea">
      <area>0,0,780,40</area>
      <value>Hello MythTV!</value>
      <align>hcenter,vcenter</align>
      <font>baselarge</font>
    </textarea>

  </window>

  <window name="main">

    <textarea name="title" from="basetextarea">
      <area>0,100,100%,60</area>
      <align>hcenter,vcenter</align>
      <font>basetitle</font>
      <value>SVT Play</value>
    </textarea>

    <buttontree name="program-tree">
      <area>5%,200,90%,340</area>
      <numlists>3</numlists>
      <spacing>6</spacing>
      <buttonlist name="listtemplate" from="basebuttonlist" />
    </buttontree>

  </window>

  <window name="program-view">

    <textarea name="title" from="basetextarea">
      <area>0,100,100%,60</area>
      <align>hcenter,vcenter</align>
      <font>basetitle</font>
      <value>View Episodes</value>
    </textarea>

    <buttontree name="episode-tree">
      <area>20%,200,80%,340</area>
      <numlists>1</numlists>
      <spacing>6</spacing>
      <buttonlist name="listtemplate" from="basebuttonlist" />
    </buttontree>

  </window>

</mythuitheme>

